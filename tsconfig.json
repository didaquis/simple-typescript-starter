{
	"compilerOptions": {
		"target": "ES2021",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"lib": ["ES2021"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}